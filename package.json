{
  "name": "nozzle-mosaic-adapters-monorepo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nozzle/mosaic-adapters.git"
  },
  "packageManager": "pnpm@10.19.0",
  "type": "module",
  "scripts": {
    "clean": "nx run-many --target=clean --exclude=examples/**",
    "preinstall": "node -e \"if(process.env.CI == 'true') {console.info('Skipping preinstall...')} else {process.exit(1)}\" || npx -y only-allow pnpm",
    "test:format": "prettier . --check",
    "test:types": "nx run-many --target=test:types --exclude=examples/**",
    "test:build": "pnpm run build:all",
    "test:pr": "nx affected --targets=test:types,test:build --exclude=examples/**",
    "build": "nx affected --target=build --exclude=examples/**",
    "build:all": "nx run-many --target=build --exclude=examples/**",
    "watch": "nx watch --all -- pnpm run build",
    "format": "prettier . --write",
    "lint": "echo 'style linting is to be implemented'",
    "dev": "pnpm run watch"
  },
  "devDependencies": {
    "@tanstack/config": "^0.22.0",
    "nx": "^22.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  }
}
